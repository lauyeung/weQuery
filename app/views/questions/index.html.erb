<% if current_user %>
  <div class="col-md-4">
    <h3>Ask a Question</h3>
    <%= simple_form_for(@question) do |f| %>
      <%= f.input :content, label_html: { class: "sr-only" } %>
      <%= f.button :submit %>
    <% end %>
  </div>

  <p>
    <%- if @questions != nil -%>
      <%- @questions.each do |question| -%>
        <%= question.content %>
        <%= link_to '+1', question_vote_path(question.id),method: :post, id: 'vote' %>
          <% if question.votes != nil %>
            <%= question.votes.count %>
          <%- end -%>
       <%- end -%>
    <%- end -%>
  </p>

 

  <div class="col-md-8">
    <h3>Submitted Questions</h3>
    <p>
        <%- @questions.each do |question| -%>
          <%= question.content %><br>
        <%- end -%>
    </p>
  </div>
<% else %>
  <div class="col-md-12">
    <h1><%= link_to "Sign in with GitHub", "/auth/github"%></h1>
  </div>

<% end %>

